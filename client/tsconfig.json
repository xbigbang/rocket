{
    "compilerOptions": {
      "target": "es2017",
      "allowJs": true,
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "importHelpers": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "declaration": false,
      "module": "commonjs",
      "baseUrl": "./",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true
    },
    "exclude": ["node_modules"]
  }