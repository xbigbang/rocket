{
    "compilerOptions": {
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "importHelpers": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "declaration": false,
      "module": "commonjs",
      "rootDir": "src",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true,
      "target": "es2017"
    },
    "exclude": ["node_modules"]
  }